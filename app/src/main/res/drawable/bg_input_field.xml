<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado: enfocado (cuando el usuario escribe) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#22FFFFFF"/> <!-- Fondo translúcido -->
            <stroke android:width="2dp" android:color="#4DB6FF"/> <!-- Borde azul -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Estado: presionado (por si se usa en botones editables) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF"/>
            <stroke android:width="2dp" android:color="#80C0FF"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Estado por defecto -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22FFFFFF"/> <!-- Fondo translúcido -->
            <stroke android:width="1dp" android:color="#55FFFFFF"/> <!-- Borde blanco tenue -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

</selector>
